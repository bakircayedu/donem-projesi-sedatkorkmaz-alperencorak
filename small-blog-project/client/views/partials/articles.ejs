<% articles.forEach(article => { %>
    <div class="blog-container ">
      <div class="row">
        <div class="col-xl-4 "> 
          <div class="crop rounded">
            <img style="width: 100%; " src="http://localhost:4000/uploads/article_images/<%=article.article_image %> " class="rounded mx-auto d-block" alt="blog-thumbnail">
          </div>
        </div>
        <div class="col-xl-8">
          <div class="blog-view-content">
            <a style="color: black; text-decoration: none;" href="http://localhost:8080/articles/<%=article.slug %>"><h2><%= article.title %></h2></a> 
            <p class="text-muted"><%= article.description %> <p>
            <div class="row">
              <div class="col-6 ">
                <p><% const date = new Date (Date.parse(article.createdAt)) %> <%= date.toLocaleDateString() %>  </p>
              </div>
              <div class=" pe-4 col-6"><p class="text-end align-items-center"><b>Yazar: </b>
                <% let array = article.user.name.split(" ") %>  
                <% let name = " " %>  
                <%  for( let i = 0; i < array.length; i++ ) { %> 
                <% name += lodash.upperFirst(array[i]) + " " %> 
                <% } %> 
                <%= name %> 
              </p></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% }) %>